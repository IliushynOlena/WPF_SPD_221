<Window x:Class="_07_ListControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_ListControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <StackPanel Margin="10">
        <Button Margin="10" Width="300" FontSize="20" Click="AddButton_Click" >Add new Person</Button>
        <Button Margin="10" Width="300" FontSize="20" Click="Button_Click" >Remove Selected Person</Button>
        <Button Margin="10" Width="300" FontSize="20" Click="Button_Click_1" >Clear all People</Button>
        <ComboBox Width="300" Height="30" IsEditable="True" IsReadOnly="True" 
                  Name="comboBox" SelectionChanged="comboBox_SelectionChanged">
            <ComboBoxItem Background="Red">Red</ComboBoxItem>
            <ComboBoxItem IsSelected="True" >Green</ComboBoxItem>
            <ComboBoxItem>Blue</ComboBoxItem>
        </ComboBox>

    </StackPanel>
</Window>
