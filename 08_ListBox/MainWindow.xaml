<Window x:Class="_08_ListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_ListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Margin="5" Padding="10"  Click ="AddButton_Click">Add</Button>
            <Button Margin="5" Padding="10" Click="RemoveButton_Click">Remove</Button>
            <Button Margin="5" Padding="10" Click="ChangeButton_Click">Change</Button>
        </StackPanel>
        <ListBox SelectionMode="Extended" Name="listBox">
            <ListBoxItem>Red</ListBoxItem>
            <ListBoxItem IsSelected="True">Green</ListBoxItem>
            <ListBoxItem>Blue</ListBoxItem>
        </ListBox>

    </DockPanel>
</Window>
